FF-feature-y {
    countryCode in (nl, NL, be, BE) -> true
    false
}
FF-simple -> true
FF-log -> "debug"
FF-version -> 3

// check if name contains Nik
// @test FF-contains-feature-check(name="Nikolajus") == true
FF-contains-feature-check {
    lower(name) ~ nik -> true // contains
    false
}

// check name against regexp /.*ola.*/
// @test FF-regexp-feature-check(name="Check Nikolajus match") == true
FF-regexp-feature-check {
    lower(name) ~ /.*ola.*/ -> true // matches regex
    false
}

// starts with and ends with
FF-email-domain-check {
    email ~$ "@tesla.com" -> true
    lower(email) ^~ "nikolajus" -> true
    false
}

// NL segment
@segment country_nl {
    lower(country) == nl
}

// feature check with env and segment
FF-feature-y-2 {
    @env prod {
        segment(country_nl) -> false
    }
    segment(country_nl) -> true

    // else default to false
    false
}

// reverse array
FF-admin-panel {
    // roles is an array: ["viewer", "editor", "admin"]
    "admin" in roles -> true
    false
}